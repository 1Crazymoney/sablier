    "@0x/subproviders": "^4.1.0",
    "@sablier/dev-utils": "0.0.1",
    "bignumber.js": "^8.1.1",
    "chai": "^4.2.0",
    "chai-bignumber": "^3.0.0",
    "coveralls": "3.0.3",
    "dotenv": "^7.0.0",
    "fixpack": "^2.3.1",
    "ganache-cli": "^6.5.1",
    "istanbul": "^0.4.5",
    "shx": "^0.3.2",
    "solc": "^0.5.9",
    "solhint": "^2.1.2",
    "truffle": "^5.0.30",
    "truffle-assertions": "^0.8.2",
    "truffle-hdwallet-provider": "^1.0.15",
